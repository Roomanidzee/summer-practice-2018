html
    head
        meta(charset = "utf-8")
        meta(name="viewport", content="width=device-width, initial-scale=1")
        link(rel="stylesheet", href = "/static/css/bootstrap.min.css")
        link(rel="stylesheet", href = "/static/css/style.css")

    body
        div.container-fluid.h-100
            div.row.justify-content-center.align-items-center.h-100
                div.col.col-sm-6.col-md-6.col-lg-4.col-xl-3
                    form(action='/register', method='POST')
                        div.form-group
                            input.form-control.form-control-lg(placeholder='Логин', type='text', name = 'login')
                        div.form-group
                            input.form-control.form-control-lg(placeholder='Почта', type='text', name = 'email')
                        div.form-group
                            input.form-control.form-control-lg(placeholder='Имя пользователя', type='text', name = 'username')
                        div.form-group
                            input.form-control.form-control-lg(placeholder='Телефон(без +)', type='text', name = 'phone')
                        div.form-group
                            button.btn.btn-info.btn-lg.btn-block(type = "submit") Зарегистрироваться
        script(src = "/static/js/jquery-3.3.1.min.js", type = "text/javascript")
        script(src = "/static/js/bootstrap.min.js", type = "text/javascript")